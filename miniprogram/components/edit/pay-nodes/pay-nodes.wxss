.config-schema-group {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 12rpx;
}

.config-schema-pill {
  background-color: #f8f4ef;
  font-size: 22rpx;
  color: #8b8680;
  width: 100%;
  border: 1px solid #d6cdc4;
  border-radius: 14rpx;
  overflow: hidden;
}

.config-schema-action {
  margin-top: 12rpx;
  color: #c0a28a;
  border-style: dashed;
  text-align: center;
  border: 1rpx dashed #c0a28a;
  border-radius: 14rpx;
  padding: 12rpx 16rpx;
  margin-left: 40rpx;
  font-size: 22rpx;
}

.config-input {
  width: 100%;
  box-sizing: border-box;
  margin-bottom: 8rpx;
  padding: 8rpx 10rpx;
  min-height: 64rpx;
  border-radius: 10rpx;
  background-color: #f8f4ef;
  border: 2rpx solid #d6cdc4;
  font-size: 22rpx;
  color: #4a4742;
}

.config-input-small {
  flex: 1;
  box-sizing: border-box;
  padding: 8rpx 10rpx;
  min-height: 64rpx;
  border-radius: 10rpx;
  background-color: #f8f4ef;
  border: 2rpx solid #d6cdc4;
  font-size: 22rpx;
  color: #4a4742;
}

.pay-node-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.pay-node-name-input {
  flex: 1;
}

.pay-node-ratio {
  display: flex;
  align-items: center;
  gap: 6rpx;
  width: 220rpx;
}

.pay-node-ratio-input {
  flex: 1;
  color: gray;
}

.pay-node-ratio-suffix {
  font-size: 22rpx;
  color: #8b8680;
}

.pay-node-time {
  display: flex;
  align-items: center;
}

.pay-node-time-display {
  display: flex;
  align-items: center;
  width: 100%;
  color: gray;
}

.pay-node-time-picker {
  width: 100%;
}

.flex {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
}

.pay-node-header {
  justify-content: space-between;
  background-color: #ece2d5;
  padding: 24rpx;
  overflow: hidden;
}

.pay-node-summary {
  display: flex;
  align-items: center;
  gap: 6rpx;
}

.pay-node-item-content {
  display: flex;
  gap: 5rpx;
  align-items: flex-start;
}

.pay-node-title {
  font-weight: 600;
  color: gray;
}

.pay-node-meta {
  display: flex;
  align-items: center;
  font-size: 20rpx;
  color: #a19a92;
  margin-left: 10rpx;
}

.pay-node-meta-separator {
  opacity: 0.5;
}

.pay-node-body {
  overflow: hidden;
  transition: max-height 0.2s ease, opacity 0.2s ease;
}

.pay-node-body--collapsed {
  max-height: 0;
  opacity: 0;
}

.pay-node-body--expanded {
  max-height: 200rpx;
  opacity: 1;
}

.pay-node-field {
  margin-bottom: 12rpx;
}

.pay-node-field-label {
  margin-bottom: 6rpx;
  font-size: 22rpx;
  color: #8b8680;
}

.pay-node-field-grid {
  display: flex;
  flex-direction: row;
  gap: 8rpx;
  margin: 24rpx;
}

.pay-node-field-item {
  flex: 0 0 auto;
}

.pay-node-field-item--name {
  flex: 1;
}

.pay-node-field-item--ratio {
  flex: 0 0 100rpx;
}

.pay-node-field-item--date {
  flex: 0 0 120rpx;
}

.pay-node-list-box {
  position: relative;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.pay-node-drag-ghost {
  position: absolute;
  left: 0;
  right: 0;
  z-index: 10;
  opacity: 0.96;
  box-shadow: 0 6rpx 14rpx rgba(0, 0, 0, 0.12);
  pointer-events: none;
}
