.config-schema-pill {
  width: 100%;
  padding: 12rpx 16rpx;
  background-color: #f8f4ef;
  border: 2rpx solid #d6cdc4;
  border-radius: 14rpx;
  font-size: 22rpx;
  color: #8b8680;
  overflow: hidden;
}

.service-item{
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.config-schema-row {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  margin-top: 8rpx;
  padding-left: 20rpx;
  overflow: hidden;
  transition: max-height 0.2s ease, opacity 0.2s ease;
}

.config-schema-row--collapsed {
  max-height: 0;
  opacity: 0;
}

.config-schema-row--expanded {
  opacity: 1;
}

.config-schema-label {
  font-size: 24rpx;
  color: #6b665f;
  line-height: 22px;
}

.config-schema-action {
  color: #c0a28a;
  border-style: dashed;
  text-align: center;
  border: 1rpx dashed #c0a28a;
  border-radius: 14rpx;
  padding: 12rpx 16rpx;
  margin-left: 40rpx;
  font-size: 22rpx;
  margin-top: 12rpx;
}

.config-input {
  width: 100%;
  box-sizing: border-box;
  margin-bottom: 8rpx;
  padding: 8rpx 10rpx;
  min-height: 64rpx;
  border-radius: 10rpx;
  background-color: #f8f4ef;
  border: 2rpx solid #d6cdc4;
  font-size: 22rpx;
  color: #4a4742;
}

.config-input-small {
  flex: 1;
  box-sizing: border-box;
  padding: 8rpx 10rpx;
  min-height: 64rpx;
  border-radius: 10rpx;
  background-color: #f8f4ef;
  border: 2rpx solid #d6cdc4;
  font-size: 22rpx;
  color: #4a4742;
}

.flex {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
}

.service-header {
  justify-content: space-between;
  margin: -12rpx -16rpx -12rpx;
  padding: 10rpx 16rpx;
  background-color: #ece2d5;
}

.service-summary {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.service-title {
  font-size: 22rpx;
  font-weight: 600;
  color: #4a4742;
}

.service-meta {
  display: flex;
  align-items: center;
  font-size: 20rpx;
  color: #6b665f;
  margin-left: 10rpx;
}

.service-meta-separator {
  opacity: 0.5;
}

.service-actions {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  gap: 12rpx;
}

.service-body {
  overflow: hidden;
  transition: max-height 0.2s ease, opacity 0.2s ease;
}

.service-body--collapsed {
  max-height: 0;
  opacity: 0;
}

.service-body--expanded {
  max-height: 9999rpx;
  opacity: 1;
  margin-top: 8rpx;
}

.service-field {
  margin-top: 24rpx;
  margin-bottom: 12rpx;
}

.service-field-label {
  margin-bottom: 6rpx;
  font-size: 22rpx;
  color: #8b8680;
}

.service-field-grid {
  display: flex;
  flex-direction: row;
  gap: 8rpx;
}

.service-field-item {
  flex: 1;
}

.service-summary-content{
  display: flex;
  gap: 6rpx;
  align-items: center;
  padding: 12rpx 4rpx;
  border-radius: 12rpx;
}

.service-item-content{
  display: flex;
  gap: 5rpx;
  align-items: start;
}

.service-list-box {
  position: relative;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.service-category {
  margin-bottom: 24rpx;
}

.service-drag-ghost {
  position: absolute;
  left: 0;
  right: 0;
  z-index: 10;
  opacity: 0.96;
  box-shadow: 0 6rpx 14rpx rgba(0, 0, 0, 0.12);
  pointer-events: none;
}

.config-schema-footer {
  color: #c0a28a;
  border-style: dashed;
  text-align: center;
  border: 1rpx dashed #c0a28a;
  border-radius: 14rpx;
  padding: 12rpx 16rpx;
  margin-left: 30rpx;
  font-size: 22rpx;
  margin-top: -24rpx;
}
