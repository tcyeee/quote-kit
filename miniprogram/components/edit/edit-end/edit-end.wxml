<view class="edit-end-root">
    <view class="edit-end-card">
        <view class="edit-end-title">发送前请确认报价单信息</view>
        <view class="edit-end-summary">
            <view class="edit-end-row">
                <view class="edit-end-label">项目甲方</view>
                <view class="edit-end-value">{{quoteDetail.clientName}}</view>
            </view>
            <view class="edit-end-row">
                <view class="edit-end-label">项目总价</view>
                <view class="edit-end-value">{{quoteDetail.computeData.totalAmount}} 元</view>
            </view>
            <view class="edit-end-row">
                <view class="edit-end-label">项目周期</view>
                <view class="edit-end-value">
                    {{quoteDetail.computeData.overallDeliveryPeriodDays}} 天
                </view>
            </view>
            <view class="edit-end-row">
                <view class="edit-end-label">链接有效期</view>
                <view class="edit-end-value">
                    <view class="expire-options">
                        <view class="expire-option {{linkExpireDays === 1 ? 'active' : ''}}" data-days="1" bindtap="onExpireDaysTap">
                            1天
                        </view>
                        <view class="expire-option {{linkExpireDays === 7 ? 'active' : ''}}" data-days="7" bindtap="onExpireDaysTap">
                            7天
                        </view>
                        <view class="expire-option {{linkExpireDays === 14 ? 'active' : ''}}" data-days="14" bindtap="onExpireDaysTap">
                            14天
                        </view>
                    </view>
                </view>
            </view>
        </view>
        <view class="edit-end-tip">发送完成后，系统将持续追踪报价单查看情况</view>
    </view>
    <view class="edit-end-actions">
        <button class="action-btn secondary" bindtap="toggleConfirmDialog">重新编辑</button>
        <button class="action-btn primary" bindtap="send">确认发送</button>
    </view>
</view>