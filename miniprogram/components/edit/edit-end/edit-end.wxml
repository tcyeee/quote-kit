<view class="edit-end-root">
    <view class="edit-end-card">
        <view class="edit-end-title">发送前请确认报价单信息</view>
        <view class="edit-end-summary">
            <view class="edit-end-row">
                <view class="edit-end-label">项目甲方</view>
                <view class="edit-end-value">xxx</view>
            </view>
            <view class="edit-end-row">
                <view class="edit-end-label">总价</view>
                <view class="edit-end-value">xx 元</view>
            </view>
            <view class="edit-end-row">
                <view class="edit-end-label">周期</view>
                <view class="edit-end-value">xx 天</view>
            </view>
            <view class="edit-end-row">
                <view class="edit-end-label">链接有效期</view>
                <view class="edit-end-value">xx 天</view>
            </view>
        </view>
