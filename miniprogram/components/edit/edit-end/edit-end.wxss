.edit-end-root {
  padding: 40rpx 32rpx 56rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.edit-end-card {
  background-color: #fdfaf7;
  border-radius: 24rpx;
  padding: 32rpx 28rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.06);
  border: 2rpx solid #e0d7ce;
}

.edit-end-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #6b665f;
  margin-bottom: 24rpx;
}

.edit-end-summary {
  display: flex;
  flex-direction: column;
  gap: 14rpx;
  padding: 18rpx 16rpx;
  border-radius: 18rpx;
  background-color: #f8f4ef;
  border: 2rpx solid #d6cdc4;
}

.edit-end-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
  color: #6b665f;
}

.edit-end-label {
  opacity: 0.7;
}

.edit-end-value {
  font-weight: 600;
  color: #4a4742;
}

.edit-end-tip {
  margin-top: 28rpx;
  font-size: 22rpx;
  line-height: 1.6;
  color: #8b8680;
}

.edit-end-actions {
  margin-top: 40rpx;
  display: flex;
  gap: 24rpx;
}

.action-btn {
  width: 100%;
  height: 88rpx;
  border-radius: 999rpx;
  font-size: 26rpx;
  line-height: 88rpx;
  text-align: center;
  padding: 0;
}

.action-btn.secondary {
  background-color: transparent;
  border: 2rpx solid #c0a28a;
  color: #6b665f;
}

.action-btn.primary {
  background-color: #c0a28a;
  border: 2rpx solid #c0a28a;
  color: #fdfaf7;
}
