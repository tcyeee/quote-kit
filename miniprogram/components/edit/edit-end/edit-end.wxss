.edit-end-root {
  padding: 40rpx 32rpx 56rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.edit-end-main {
  margin-top: 12rpx;
}

.edit-end-cover-container{
  text-align: center;
  margin-bottom: 50rpx;
}

.edit-end-cover {
  width: 50%;
  border-radius: 24rpx;
  margin-bottom: 24rpx;
}

.edit-end-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #6b665f;
  margin-bottom: 24rpx;
}

.edit-end-summary {
  display: flex;
  flex-direction: column;
  gap: 14rpx;
  padding: 18rpx 16rpx;
  border-radius: 18rpx;
  background-color: #fef8f1;
  border: 2rpx solid #d6cdc4;
}

.edit-end-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 22rpx;
  color: #6b665f;
}

.edit-end-label {
  opacity: 0.7;
}

.edit-end-value {
  font-weight: 500;
  color: #4a4742;
  opacity: 0.8;
}

.expire-options {
  display: flex;
  gap: 12rpx;
}

.expire-option {
  min-width: 96rpx;
  padding: 8rpx 16rpx;
  box-sizing: border-box;
  border-radius: 999rpx;
  font-size: 22rpx;
  text-align: center;
  border: 2rpx solid #d6cdc4;
  color: #6b665f;
}

.expire-option.active {
  border-color: #c0a28a;
  background-color: #c0a28a;
  color: #fdfaf7;
}

.edit-end-tip {
  margin-top: 28rpx;
  font-size: 22rpx;
  line-height: 1.6;
  color: #8b8680;
}

.edit-end-actions {
  margin-top: 40rpx;
  display: flex;
  gap: 24rpx;
}

.action-btn {
  width: 100%;
  height: 88rpx;
  border-radius: 999rpx;
  font-size: 26rpx;
  line-height: 88rpx;
  text-align: center;
  padding: 0;
}

.action-btn.secondary {
  background-color: transparent;
  border: 2rpx solid #c0a28a;
  color: #6b665f;
}

.action-btn.primary {
  background-color: #c0a28a;
  border: 2rpx solid #c0a28a;
  color: #fdfaf7;
}
