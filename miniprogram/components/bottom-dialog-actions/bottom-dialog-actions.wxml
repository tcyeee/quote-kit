      <view class="theme-option" data-theme="neon">
        <view class="theme-preview neon"></view>
        <text>霓虹</text>
      </view>
      <view class="theme-option" data-theme="moonlight">
        <view class="theme-preview moonlight"></view>
        <text>月光</text>
      </view>
      <view class="theme-option" data-theme="deep-sea">
        <view class="theme-preview deep-sea"></view>
        <text>深海</text>
      </view>
    </view>
  </view>
</view>