.config-schema-pill {
  padding: 12rpx 16rpx;
  background-color: #f8f4ef;
  border: 2rpx solid #d6cdc4;
  border-radius: 14rpx;
  font-size: 22rpx;
  color: #8b8680;
}

.config-schema-row {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  margin-top: 8rpx;
}

.config-schema-label {
  font-size: 24rpx;
  color: #6b665f;
  margin-top: 10rpx;
}

.config-input {
  width: 100%;
  box-sizing: border-box;
  margin-bottom: 8rpx;
  padding: 8rpx 10rpx;
  border-radius: 10rpx;
  background-color: #f8f4ef;
  border: 2rpx solid #d6cdc4;
  font-size: 22rpx;
  color: #4a4742;
}

.config-input-small {
  flex: 1;
  box-sizing: border-box;
  padding: 8rpx 10rpx;
  border-radius: 10rpx;
  background-color: #f8f4ef;
  border: 2rpx solid #d6cdc4;
  font-size: 22rpx;
  color: #4a4742;
}

.flex {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
}

.service-header {
  justify-content: space-between;
  margin-bottom: 12rpx;
}

.service-summary {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.service-title {
  font-size: 24rpx;
  font-weight: 600;
  color: #4a4742;
}

.service-meta {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  gap: 6rpx;
  font-size: 20rpx;
  color: #a19a92;
}

.service-meta-separator {
  opacity: 0.5;
}

.service-actions {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  gap: 12rpx;
}

.service-body {
  overflow: hidden;
  transition: max-height 0.2s ease, opacity 0.2s ease;
}

.service-body--collapsed {
  max-height: 0;
  opacity: 0;
}

.service-body--expanded {
  max-height: 600rpx;
  opacity: 1;
}

.service-field {
  margin-bottom: 12rpx;
}

.service-field-label {
  margin-bottom: 6rpx;
  font-size: 22rpx;
  color: #8b8680;
}

.service-field-grid {
  display: flex;
  flex-direction: row;
  gap: 8rpx;
}

.service-field-item {
  flex: 1;
}

.service-summary-content{
  display: flex;
  flex-direction: row;
  gap: 6rpx;
}

.service-list-box {
  position: relative;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.service-drag-ghost {
  position: absolute;
  left: 0;
  right: 0;
  z-index: 10;
  opacity: 0.96;
  box-shadow: 0 6rpx 14rpx rgba(0, 0, 0, 0.12);
  pointer-events: none;
}
