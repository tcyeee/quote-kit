<view class="analyse-page">
  <view class="analyse-safe-top" style="height: {{safeTop}}px;"></view>
  <view class="analyse-header-bar">
    <span class="icon--return icon-size-70 analyse-back-button" bindtap="onBackTap" />
  </view>
  <view class="analyse-cards">
    <view class="analyse-card">
      <view class="analyse-card-label">总查看次数</view>
      <view class="analyse-card-value">¥{{totalAmount}}</view>
    </view>
    <view class="analyse-card">
      <view class="analyse-card-label">报价单数量</view>
      <view class="analyse-card-value">{{totalCategories}}</view>
    </view>
  </view>
  <view class="analyse-section">
    <view class="analyse-section-title">报价单</view>
    <view wx:for="{{quoteDetail.pricingItems}}" wx:for-item="category" wx:for-index="index" wx:key="name" class="analyse-category-row">
      <view class="analyse-category-name">{{category.name}}</view>
      <view class="analyse-category-meta">
        <view class="analyse-category-count">{{category.items.length}} 项</view>
      </view>
    </view>
  </view>
</view>