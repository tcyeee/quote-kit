<scroll-view class="page" scroll-y>
  <view class="quote-wrapper">
    <view class="quote-card">
      <view class="quote-header">
        <text class="quote-title">{{title}}</text>
        <view class="quote-meta">
          <text class="meta-line">1. 项目名称：{{projectName}}</text>
          <text class="meta-line">2. 设计内容：{{designScope}}</text>
        </view>
      </view>

      <view class="quote-section">
        <view class="section-title">
          <text>3. 费用报价</text>
        </view>
        <view class="table table-fee">
          <view class="table-row table-header">
            <text class="col-no">序号</text>
            <text class="col-content">内容</text>
            <text class="col-area">面积㎡</text>
            <text class="col-unit">单价(元/㎡)</text>
            <text class="col-total">合计(元)</text>
            <text class="col-remark">备注</text>
          </view>
          <view class="table-row" wx:for="{{feeItems}}" wx:key="no">
            <text class="col-no">{{item.no}}</text>
            <text class="col-content">{{item.name}}</text>
            <text class="col-area">{{item.area}}</text>
            <text class="col-unit">{{item.unitPrice}}</text>
            <text class="col-total">{{item.total}}</text>
            <text class="col-remark">{{item.remark}}</text>
          </view>
        </view>
        <view class="section-notes">
          <text class="note-line" wx:for="{{feeNotes}}" wx:key="*this">
            {{item}}
          </text>
        </view>
      </view>

      <view class="quote-section">
        <view class="section-title">
          <text>4. 服务说明</text>
        </view>

        <view class="subsection">
          <view class="subsection-label">
            <text>4.1 服务内容</text>
          </view>
          <view class="table table-service">
            <view class="table-row table-header">
              <text class="col-service-title">服务内容</text>
              <text class="col-service-detail">所拟提供成果及服务</text>
            </view>
            <view class="table-row" wx:for="{{serviceMain}}" wx:key="service">
              <text class="col-service-title">{{item.service}}</text>
              <text class="col-service-detail">{{item.detail}}</text>
            </view>
          </view>
        </view>

        <view class="subsection">
          <view class="subsection-label">
            <text>4.2 施工配合</text>
          </view>
          <view class="table table-service">
            <view class="table-row table-header">
              <text class="col-service-title">服务内容</text>
              <text class="col-service-detail">配合方式说明</text>
            </view>
            <view class="table-row" wx:for="{{serviceConstruction}}" wx:key="service">
              <text class="col-service-title">{{item.service}}</text>
              <text class="col-service-detail">{{item.detail}}</text>
            </view>
          </view>
        </view>
      </view>

      <view class="quote-section">
        <view class="section-title">
          <text>5. 付款比例</text>
        </view>
        <view class="table table-payment">
          <view class="table-row table-header">
            <text class="col-pay-times">付款次数</text>
            <text class="col-pay-ratio">付款比例</text>
            <text class="col-pay-amount">金额(元)</text>
            <text class="col-pay-time">时间</text>
          </view>
          <view class="table-row" wx:for="{{paymentPlans}}" wx:key="times">
            <text class="col-pay-times">{{item.times}}</text>
            <text class="col-pay-ratio">{{item.ratio}}</text>
            <text class="col-pay-amount">{{item.amount}}</text>
            <text class="col-pay-time">{{item.time}}</text>
          </view>
        </view>
      </view>

      <view class="quote-footer">
        <text class="footer-date">{{footerDate}}</text>
        <text class="footer-company">{{footerCompany}}</text>
      </view>
    </view>
  </view>
</scroll-view>
