<view class="page-root">
  <quote-preview />
  <!-- 底部对话框遮罩 -->
  <view class="bottom-dialog-mask {{bottomDialogExpanded ? 'visible' : 'hidden'}}" bindtap="toggleBottomDialog"></view>
  <!-- 底部对话框 -->
  <view class="bottom-dialog {{bottomDialogExpanded ? 'expanded' : 'collapsed'}}" style="height: {{bottomDialogExpanded ? options.bottomDialogExpandedHeight : options.bottomDialogCollapsedHeight}}vh;">
    <view class="bottom-dialog-header" bindtap="toggleBottomDialog">
      <view class="bottom-dialog-handle"></view>
    </view>
    <view class="bottom-dialog-body">
      <view class="action-bar">
        <button class="action-btn secondary">保存图片</button>
        <button class="action-btn primary">发送报价单</button>
      </view>
    </view>
  </view>
</view>